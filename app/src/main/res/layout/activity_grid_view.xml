<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fulton.shaw.android.tellme.experiment.CalendarViewActivity"
    android:orientation="vertical"
    android:background="@drawable/drops_glass_background_72327_540x960"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        >

        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/mondayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/tuesdayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/wednesdayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/thursdayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/fridayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/saturdayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <include
            layout="@layout/calendar_header_one_item"
            android:id="@+id/sundayHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="7"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <include
        layout="@layout/calendar_year_month"
        />
</LinearLayout>
