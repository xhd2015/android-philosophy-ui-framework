<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fulton.shaw.android.x.activities.AddForDatabaseActivity"
    android:orientation="vertical"
    >

    <ListView
        android:id="@+id/fieldInputter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <!--android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.GridLayout-->

    <Button
        android:id="@+id/buttonPositive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加"
        android:background="@color/red_little"
        android:onClick="onClickPositive"
        />

    <Button
        android:id="@+id/buttonNagetive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:background="@color/gray"
        android:onClick="onClickNagetive"
        />

</LinearLayout>
